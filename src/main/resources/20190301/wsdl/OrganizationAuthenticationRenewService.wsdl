<wsdl:definitions
        xmlns:oas="http://www.swissdec.ch/schema/oa/20190301/OrganizationAuthenticationRenewService"
        xmlns:oast="http://www.swissdec.ch/schema/oa/20190301/OrganizationAuthenticationServiceTypes"
        xmlns:xs="http://www.w3.org/2001/XMLSchema"
        xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
        xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
        name="OrganizationAuthenticationService"
        targetNamespace="http://www.swissdec.ch/schema/oa/20190301/OrganizationAuthenticationRenewService">

    <!-- 31.07.2019  author: itServe, bfh
        intern: final-1.0.0 // FINAL
        business-view  = OK
        technical-view = final

        SVN keywords
        $Date:: 2020-06-12 14:42:58 +0200 (Fr., 12 Jun 2020)    $: Date of last commit
        $Revision:: 26766                                       $: Revision of last commit
